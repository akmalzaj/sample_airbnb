<div class="container-fluid">
    <h2>ADD NEW PROPERTY AND LET'S MAKE MORE MONEY!</h2>
    <hr>
    <div class="jumbotron">
      <form role="form" action='/newProperty' method='post'>

        <div class="form-group">
        <!-- PROPERTY TYPE -->
        <label for="inputPropertyType">Property Type</label>
          <select name="property[property_type]" class="form-control">
            <option value="Apartment">Apartment</option>
            <option value="House">House</option>
            <option value="Bed & Breakfast">Bed & Breakfast</option>
            <option value="Dorm">Dorm</option>
            <option value="Chalet/Resort">Chalet/Resort</option>
          </select>
        </div>

        <div class="form-group">
        <!-- PROPERTY DESCRIPTION -->
        <label for="inputDescription">Description</label>
          <textarea name="property[description]" class="form-control" rows="3" placeholder="Put the description of your property here, such as property size, property features etc."></textarea>
        </div>

        <div class="form-group">
        <!-- LOCATION -->
        <label for="inputLoc">Location</label>
        <input type="text" name="property[location]" class="form-control"   placeholder="Address of your property">
        </div>

        <!-- PROPERTY PRICE -->
        <div class="form-group">
        <label for="inputPrice">Price</label>
        <input type="text" name="property[price]" class="form-control">
        </div>

         <!-- PROPERTY TAGS -->
        <div class="form-group">
        <label for="inputPrice">Tags (Categories), Please seperate you tag by ','</label>
        <input type="text" name="tag[name]" class="form-control">
        </div>

        <br>
        <button type="submit" class="btn btn-lg btn-primary btn-block">ADD</button>
    </form>
  </div>

</div>